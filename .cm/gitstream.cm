  use_checks:
    if:
      - {{ did.passed_e2e_tests }}
    run:
      - action: add-comment@v1
        args:
          comment: |
            check found

  dump_checks:
    on:
      - comment_added
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            CHECKS DUMP:
            ```yaml
            {{ pr.checks | dump(2) | indent(12) | safe }}
            ```

            COMMIT STATUSES DUMP:
            ```yaml
            {{ COMMIT_STATUSES | dump(2) | indent(12) }}
            ```
