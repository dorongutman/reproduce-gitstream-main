COMMIT_STATUSES: {{ "" | getCommitStatuses }}
setup:
  e2e_tests_check_name: my-external-service
did:
  passed_e2e_tests: {{ COMMIT_STATUSES | filter(attr='name',term=setup.e2e_tests_check_name) | match(attr='conclusion',term='success') | some }}

colors:
  red: 'b60205'
  green: '0e8a16'
